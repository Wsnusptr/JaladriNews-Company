# ============================================================================
# JALADRI NEWS - ENVIRONMENT EXAMPLE
# ============================================================================
# Copy ini ke .env dan isi dengan nilai real Anda
# File .env akan ter-ignore oleh git dan tidak akan dipublish
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL via Supabase)
# ============================================================================
DATABASE_URL="postgresql://postgres:password@db.supabase.co:5432/postgres?schema=public"
DIRECT_URL="postgresql://postgres:password@db.supabase.co:5432/postgres?schema=public"

# ============================================================================
# NEXTAUTH CONFIGURATION (Authentication)
# ============================================================================
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_CALLBACK_URL="http://localhost:3000/api/auth/callback"

# ============================================================================
# SUPABASE API CONFIGURATION
# ============================================================================
NEXT_PUBLIC_SUPABASE_PUBLISH_KEY="sb_publishable_xxxxx"
SUPABASE_SECRET_KEY="sb_secret_xxxxx"
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"

# ============================================================================
# SOCIAL AUTH PROVIDERS (Optional)
# ============================================================================
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# ============================================================================
# APPLICATION ENVIRONMENT
# ============================================================================
NODE_ENV="development"
PORT_WEB=3000
PORT_CMS=3001
LOG_LEVEL="info"

# ============================================================================
# NEXT.JS SPECIFIC
# ============================================================================
NEXT_TELEMETRY_DISABLED=1

# ============================================================================
# DATABASE MIGRATION & SEEDING
# ============================================================================
AUTO_MIGRATE=true

# ============================================================================
# SECURITY & CORS
# ============================================================================
NEXT_PUBLIC_ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================
SESSION_TIMEOUT=86400000
SESSION_SECURE=false

# ============================================================================
# PRISMA CONFIGURATION
# ============================================================================
PRISMA_DEBUG_LOGS=false

# ============================================================================
# FILE UPLOAD
# ============================================================================
MAX_UPLOAD_SIZE=5242880
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,image/gif"

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_LIVE_TV=true
ENABLE_NOTIFICATIONS=true
ENABLE_ARTICLE_COMMENTS=true
ENABLE_SOCIAL_SHARING=true
