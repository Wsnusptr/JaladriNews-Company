{
  "name": "@repo/db",
  "version": "1.0.0",
  "main": "index.ts",
  "types": "index.ts",
  "exports": {
    ".": "./index.ts",
    "./client": "./client.ts",
    "./auth-config": "./auth-config.ts",
    "./notifications": "./notifications.ts"
  },
  "scripts": {
    "db:generate": "dotenv -e .env -- prisma generate",
    "db:migrate": "dotenv -e .env -- prisma migrate dev --skip-generate",
    "db:migrate:deploy": "dotenv -e .env -- prisma migrate deploy --skip-generate",
    "db:seed": "ts-node seed-direct.ts",
    "db:reset": "dotenv -e .env -- prisma migrate reset",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.2",
    "@prisma/client": "^6.13.0",
    "bcryptjs": "^2.4.3",
    "next-auth": "5.0.0-beta.29",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^22.10.2",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.1",
    "dotenv-cli": "^7.4.4",
    "prisma": "^6.13.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "prisma": {
    "seed": "ts-node seed.ts"
  }
}